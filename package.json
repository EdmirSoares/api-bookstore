{
  "name": "api-bookstore",
  "version": "1.0.0",
  "description": "Backend para sistema de livraria com arquitetura MVC",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:run": "npm run typeorm migration:run -- -d src/config/database.ts",
    "migration:generate": "npm run typeorm migration:generate -- -d src/config/database.ts",
    "migration:create": "npm run typeorm migration:create",
    "db:init": "ts-node src/database/cli.ts init",
    "db:seed": "ts-node src/database/cli.ts seed",
    "db:init-seed": "ts-node src/database/cli.ts init-seed"
  },
  "keywords": ["biblioteca", "mvc", "express", "typescript", "postgresql"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "typeorm": "^0.3.17",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "dotenv": "^16.3.1",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/pg": "^8.10.2",
    "@types/cors": "^2.8.13",
    "@types/multer": "^1.4.7",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  }
}